/* pages/my/my.wxss */
page{
  background: #f5f5f5;
}
.my-bg{
  position: relative
}
.my-bg .bgImg{
  display: block;
  position: absolute;
  top: 0;
  width: 100%;
  opacity: .2
}
.my-img{
  overflow: hidden
}
.my-img image{
  display: block;
  margin: 0 auto;
  width: 140rpx;
  height: 140rpx;
  border-radius: 100%;
  margin-top: 60rpx;
}
.my-img view{
  text-align: center;
  font-size: 28rpx;
  color: #333;
  line-height: 74rpx;
}
.my-list{

}
.my-item{
  padding:20rpx;
  color: #333;
  font-size: 28rpx;
  position: relative;
  background: #fff;
}
.my-item image.my-tb{
  width: 35rpx;
  height: 35rpx;
  vertical-align: middle;
  margin-right: 10rpx
}
.lef{
  width: 15rpx;
  height: 28rpx;
  float: right;
  margin-top: 10rpx;
}
.my-item::after{
  position: absolute;
  right: 20rpx;
  bottom: 0;
  left: 20rpx;
  height: 1px;
  content: '';
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
  background-color: #efefef;
}
.hr{
  height: 10rpx;
}
.borno::after{
  height: 0px;
}