/* pages/single/single.wxss */ 
page{
  height: 100%;
  background: #f5f5f5;
}
.singleImg{
  display: block;
  width: 100%;
}
.singleTitle{
  color: #333;
  font-size: 34rpx;
  text-align: center;
  font-weight: bold;
  padding: 28rpx 0;
}
.singleContent{
  background: #fff;
  margin: 0 20rpx;
  padding: 0 26rpx;
  border: 1rpx solid #dbdbdb;
  border-radius: 15rpx;
  
}
.singleContent view{
  font-size: 28rpx;
  color: #333;
  padding: 30rpx 0;
  position: relative;
}
.singlePhone{
  color: #157efa;
}
.singleAddr{
  color: #666;
  width: 500rpx;
  display: inline-block;
  vertical-align: text-top
}
.singleBod::after{
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  height: 1px;
  content: '';
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
  background-color: #dbdbdb;
}